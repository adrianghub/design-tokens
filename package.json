{
  "name": "@adrianghub/design-tokens",
  "version": "1.0.0",
  "description": "Design tokens for your design system",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:tokens && npm run build:bundle && npm run test",
    "build:tokens": "node build.js",
    "build:bundle": "rollup -c",
    "clean": "rimraf dist",
    "release": "npm run build && np",
    "test": "vitest run"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "design tokens",
    "style dictionary",
    "adrianghub"
  ],
  "author": "Adrian Zinko",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "np": "^10.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^4.14.2",
    "rollup-plugin-dts": "^6.1.0",
    "style-dictionary": "^3.9.2",
    "vitest": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianghub/design-tokens.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
